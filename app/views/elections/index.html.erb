<h1>Elections</h1>
<p id="notice"><%= notice %></p>
<table class="table table-inverse">
  <thead>
    <tr class="active">
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Positions</th>
      <th>Users</th>
      <th>Update</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @elections.each do |election| %>
      <tr class="active">
        <td><u><%=election.title%></u></td>
        <td><%=election.description%></td>
        <% if election.close_date > Time.now  %>
        <td> <strong>Open,</strong> ending at: <%=election.close_date%> </td>
        <% else %>
        <td> <strong>Closed,</strong> finished at: <%=election.close_date%> </td>
        <% end %>
        <td><%= link_to 'Positions', user_election_positions_path(election_id: election.id), :type => "button", :class=> 'btn btn-default' %></button></td>
        <td><%= link_to 'Users', election_users_path(election_id: election.id), :type => "button", :class=> 'btn btn-default' %></button></td>
        <td><%= link_to 'Update', edit_user_election_path(id: election.id), :type => "button", :class=> 'btn btn-default' %></button></td>
        <td><%= link_to 'Delete', user_election_path(id: election.id), data: { confirm: 'Are you sure?' }, :method => :delete, :type => "button", :class=> 'btn btn-default'%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
