<h1>Add users</h1>
<%= form_for(:user1, url: add_users_to_election_path, method: :post) do |form| %>
  <div class="container">
    <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading"> <strong class="">Add a user</strong>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">User email</label>
                            <div class="col-sm-9">
                                <%= form.text_field :email, name: 'new_user', type: 'text', class: "form-control", placeholder: 'joe@pugetsound.edu', required: ''%>
                            </div>
                            <%= form.hidden_field :delete => true %>
                        </div>
                        <div class="form-group last">
                            <div class="col-sm-offset-2 col-sm-9">
                                <button type="submit" class="btn btn-success btn-sm">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>
<% end %>
